{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "copy-tinymce-assets": "mkdir -p public/vendor/tinymce && cp -R node_modules/tinymce/skins public/vendor/tinymce/skins && cp -R node_modules/tinymce/plugins public/vendor/tinymce/plugins && cp -R node_modules/tinymce/themes public/vendor/tinymce/themes && cp -R node_modules/tinymce/icons public/vendor/tinymce/icons || true",
        "postbuild": "npm run copy-tinymce-assets"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.2",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.4.31",
        "sass": "^1.93.3",
        "tailwindcss": "^3.1.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "@vitejs/plugin-vue": "^6.0.1",
        "tinymce": "^8.2.1",
        "vite-plugin-vuetify": "^2.1.2",
        "vue": "^3.5.24",
        "vue-router": "^4.6.3",
        "vue3-perfect-scrollbar": "^2.0.0",
        "vuetify": "^3.10.9"
    }
}
